{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd back/futureintern-backend && pip install -r requirements.txt && python init_db.py"
  },
  "deploy": {
    "startCommand": "cd back/futureintern-backend && python run.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
